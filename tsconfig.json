{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES2018",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
        "baseUrl": ".",            

    "paths": {
   "@/*": ["src/*"],
      "public/*": ["public/*"],
      "@/layouts/dashboard/*": ["src/layouts/dashboard/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/apis/socials/instagram/scripts/posts/script-post-highlight-stories.api.ts",
    "src/layouts/tools/canva/action/CanvaSettingTab1.tsx",
     "src/global.d.ts", "src/components/ui/radio-gronp",  
  
  ],
  "exclude": ["node_modules"]
}
